
@{
    ViewBag.Title = "SignUp";
}

<head>
    <style>
        .labels {
            float:left;
        }
        #mainDiv {
            width: 100%; 
            text-align: center;
        }
    </style>
</head>

<div id="mainDiv" style="width: 100%; text-align: center">
    <div id="contentDiv" style="display: inline-block;">
        <div id="headerDiv">
            <h2>Créer votre compte</h2>
        </div>
        <div id="fillUpDiv">
            <table>
                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    <tr>
                        <td class="labels">
                            <label>Identifiant</label>
                        </td>
                        <td>
                            <input type="text" name="login" id="login" />
                        </td>
                    </tr>
                    <tr>
                        <td style="float:left">
                            <label>Mot de passe</label>
                        </td>
                        <td>
                            <input type="password" name="password" id="password" />
                        </td>
                    </tr>
                    <tr>
                        <td style="float:left">
                            <label>Prénom</label>
                        </td>
                        <td>
                            <input type="text" name="firstName" id="firstName"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Nom</label>
                        </td>
                        <td>
                            <input type="text" name="lastNamne" id="lastName"/>
                        </td>
                    </tr>
                    <tr>

                    </tr>
                    <tr>
                        <td></td>
                        <td style="float:left">
                            <input type="submit" value="Creer un compte" />
                        </td>
                    </tr>
                }
            </table> <br />
            @Html.ActionLink("Vous avez un compte existant? Cliquer ici!", "Login", "Account")<br />
            @Html.ActionLink("Retourne à l'accueil", "Welcome", "Home")
        </div>
    </div>
</div>

